<body>
    <nav>
      <div class="container">
        <div class="nav-container">
      <div aria-role="Logo container">
        <img src="images/logo.svg" alt="Shortly logo" class="logo-img">
      </div>

        <input type="checkbox" name="" class="checkbox" id="checkbox" style="display: none;">
            <label for="checkbox" class="menu">
                <span class="menu-icon" aria-label="Menu icon"></span>
            </label>

      <div class="nav-list">
        <div class="toleft">
          <a href="">Features</a>
